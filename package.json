{
  "name": "shrub-lend",
  "workspaces": [
    "packages/app",
    "packages/hardhat"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "private": true,
  "scripts": {
    "app": "yarn workspace @shrub-lend/app dev",
    "program": "yarn workspace @shrub-lend/program dev",
    "build:app": "yarn workspace @shrub-lend/app build",
    "build:program": "yarn workspace @shrub-lend/program build",
    "compile": "yarn workspace @shrub-lend/contracts compile",
    "hh:test": "yarn workspace @shrub-lend/contracts test"
  },
  "packageManager": "yarn@3.6.0"
}
